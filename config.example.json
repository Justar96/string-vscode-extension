{
  "_comment": "Example configuration file - copy and customize for your setup",
  "server": {
    "url": "http://localhost:8000",
    "apiKey": "your-api-key-here",
    "timeout": 30000,
    "retryAttempts": 3
  },
  "webhook": {
    "enabled": true,
    "port": 3000,
    "secret": "your-webhook-secret-here",
    "timeout": 5000
  },
  "processing": {
    "maxChunkSize": 1000,
    "batchSize": 3,
    "autoIndexOnStartup": false,
    "excludePatterns": [
      "node_modules",
      ".git",
      "dist",
      "build",
      ".venv",
      "__pycache__",
      "target"
    ]
  },
  "development": {
    "debugMode": false,
    "mockResponses": false,
    "showDetailedLogs": true
  }
} 